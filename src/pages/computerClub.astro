---
import ComputerClubHeader from "../components/ComputerClub/ComputerClubHeader.astro";
import NavigationItem from "../components/ComputerClub/NavigationItem.astro";
---

<ComputerClubHeader />

<div id="home-container">
  <div id='main-mission-statement'>
    <div style="text-align: center; height: 150px;"> <h1>The CS community of Barrington High School</h1> </div>

    <div id='mission-statement' class="labeled">
      <div id='mission-statement-label' style="flex: 1 1 auto; text-align: center; padding: 20px;">
        <h2>Main Goal</h2>
      </div>
      <div id='mission-statement-text' style="flex: 2 1 auto; padding: 20px; width: 100px;">
        <p>Computer club should be a place that exposes its members to the different aspects of computer science with the goal of creating strong, life long CS interests</p>
      </div>

    </div>
  </div>

  <div id='home-image-container'>
    <img class="hero-image" alt="Illustration of person reading a book" src="/3d-fluency-laptop.png" width="700" height="auto">
  </div>
</div>

<div id="navigation" class="navigation">
  <div style="text-align: center; flex: 0 0 100vw; height: 0px; margin-top: -70px;"><h1>What We Do</h1></div>

  <NavigationItem 
    name="Educational Code Review" 
    description="This includes our CS basics reference guide and the framework for reviewing code and projects on discord so that all members can improve their code skills" 
  />

  <NavigationItem 
    name="Presentations and Posts" 
    description="This is an blog-style archive of our upcoming and past presentations as well as Computer Club Member created published projects" 
  />
  <NavigationItem 
    name="Competitions" 
    description="This serves as a reference for our upcoming competitions and a publishing medium for recognizing competition participation" 
  />
</div>


<style>
h1 {
  font-size: 60px;
}

p {
  line-height: 30px;
}

#home-container {
  display: flex;
  height: 75vh;
  width: 80vw;
  margin: auto;
  justify-content: center;
  align-items: center;
}

#main-mission-statement {
  width: 800px;
  height: 400px;
  flex: 2 1 auto;
  background-color: white;
  margin-right: -100px;
  margin-top: -100px;
  padding: 20px;
  border-radius: 30px;
  box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
  z-index: 10;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hero-image {
  flex: 1 1 auto;
  margin-bottom: -100px;
}



.labeled {
  display:flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  width: 700px;
}

.navigation {
  display: flex;
  background-color: white;
  flex-flow: row wrap;
  justify-content: center;
  width: 60vw;
  margin: auto;
  margin-top: 30px;
  border-radius: 30px;
  box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
}

body {
  background-color: #ebebeb;
}

</style>



